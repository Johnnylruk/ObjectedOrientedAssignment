@model LoginModel
@{
    Layout = "_LayoutLoggedOut";
    ViewData["Title"] = "Login";
}
  @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["ErrorMessage"]
        </div>
    }
<form asp-controller="Login" asp-action="LogIn" method="post">
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card custom-bg-color text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center custom-text-color">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">@language.Getkey("Enter Login and Password")</p>

                            <div class="form-outline form-white mb-4">
                                <input type="text" asp-for="Login" id="login" class="form-control form-control-lg" />
                                <label class="form-label" for="login">@language.Getkey("Login")</label>
                                @Html.ValidationMessageFor(x => x.Login)
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input type="password" asp-for="Password" id="password" class="form-control form-control-lg" />
                                <label class="form-label" for="password">@language.Getkey("Password")</label>
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>

                            <p class="small mb-5 pb-lg-2">
                                <a class="text-white-50" asp-controller="Password" asp-action="ResetPassword">@language.Getkey("Forgot Password")</a>
                            </p>

                            <button class="btn btn-outline-light btn-lg px-5" type="submit">@language.Getkey("Login")</button>
                        </div>

                        <div>
                            <p class="mb-0">
                                @language.Getkey("No Account") <a asp-controller="AccessVoter" asp-action="Register" class="text-white-50 fw-bold">@language.Getkey("Register")</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


</form>