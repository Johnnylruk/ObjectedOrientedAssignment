@using EVotingSystem_SBMM.Enums
@model CandidateModel;
@{
    ViewData["Title"] = @language.Getkey("Delete");
}

<div class="text-center" xmlns="http://www.w3.org/1999/html">
</div>
<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-3 mx-1 mx-md-2 mt-2">@language.Getkey("Delete")</p>

                <form class="mx-1 mx-md-4" asp-controller="ElectoralAdminCandidate" asp-action="DeleteCandidate" method="post">
                
                  
                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="name">@language.Getkey("Name")</label>
                      <input type="text" class="form-control" asp-for="Name" placeholder="Type candidate name" />
                                           @Html.ValidationMessageFor(x => x.Name)
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="party">@language.Getkey("Party")</label>
                      <input type="text" class="form-control"  asp-for="Party" placeholder="Type candidate party name"/>
                      @Html.ValidationMessageFor(x => x.Party)
                    </div>
                  </div>
                     <div class="d-flex flex-row align-items-center mb-1">
                                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                      <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="party">@language.Getkey("City")</label>
                                        <input type="text" class="form-control"  asp-for="City" placeholder="Type candidate party name"/>
                                        @Html.ValidationMessageFor(x => x.City)
                                      </div>
                                    </div>
                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="description">@language.Getkey("Description")</label>
                      <input type="text" class="form-control"  asp-for="Description" placeholder="Type candidate Description"/>
                                            @Html.ValidationMessageFor(x => x.Description)
                    </div>
                  </div>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary">@language.Getkey("Delete")</button>
                    <a class="btn btn-secondary" asp-controller="ElectoralAdminCandidate" asp-action="Index">@language.Getkey("Back")</a>
                  </div>
                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>