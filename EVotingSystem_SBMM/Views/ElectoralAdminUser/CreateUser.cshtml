@using EVotingSystem_SBMM.Enums
@model UserModel;
@{
    ViewData["Title"] = @language.Getkey("Register");
}

<div class="text-center" xmlns="http://www.w3.org/1999/html">
</div>
<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-3 mx-1 mx-md-2 mt-2">@language.Getkey("Register")</p>

                <form class="mx-1 mx-md-4" asp-controller="ElectoralAdminUser" asp-action="CreateUser" method="post" autocomplete="off">
                
                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="name">@language.Getkey("Full Name")</label>
                      <input type="text" class="form-control" asp-for="Name" placeholder="Type user name" />
                      @Html.ValidationMessageFor(x => x.Name)
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example3c">@language.Getkey("Email")</label>
                      <input type="email" class="form-control"  asp-for="Email" placeholder="Type user Email"/>
                      @Html.ValidationMessageFor(x => x.Email)

                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="mobile">@language.Getkey("Password")</label>
                      <input type="password" class="form-control"  asp-for="Password" placeholder="Type your Mobile Number"/>
                      @Html.ValidationMessageFor(x => x.Password)
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="login">@language.Getkey("Login")</label>
                      <input type="text" class="form-control"  asp-for="Login" placeholder="Type user login"/>
                      @Html.ValidationMessageFor(x => x.Login)
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="city">@language.Getkey("Profile")</label>
                      <select class="form-select" asp-for="Profile">
                        <option value="" disabled selected>@language.Getkey("Select")</option>
                        <option value="@ProfileEnum.ElectoralAdministrator">@language.Getkey("Electoral Administrator")</option>
                        <option value="@ProfileEnum.ThirdPartAuditor">@language.Getkey("Third Part")</option>
                      </select>
                      @Html.ValidationMessageFor(x => x.Profile)
                    </div>
                  </div>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary">@language.Getkey("Register")</button>
                    <a class="btn btn-secondary" asp-controller="ElectoralAdminUser" asp-action="Index">@language.Getkey("Back")</a>
                  </div>
                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                     class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

