@model ResetPasswordModel
@{
    Layout = "_LayoutLoggedOut";
    ViewData["Title"] = @language.Getkey("Reset Password");
}
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["ErrorMessage"]
        </div>
    }
        <br />
<form asp-controller="Password" asp-action="SendResetPasswordLink" method="post">
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card custom-bg-color text-white">
                        <div class="card-body p-5 text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <h2 class="fw-bold mb-2 text-uppercase">@language.Getkey("Reset Password")</h2>
                                <p class="text-white-50 mb-5">@language.Getkey("Enter Login and Password")</p>

                                <div class="form-outline form-white mb-4">
                                    <input type="text" asp-for="Login" id="login" class="form-control form-control-lg" />
                                    <label class="form-label" for="login">@language.Getkey("Login")</label>
                                    @Html.ValidationMessageFor(x => x.Login)
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input type="text" asp-for="Email" id="email" class="form-control form-control-lg" />
                                    <label class="form-label" for="email">@language.Getkey("Email")</label>
                                    @Html.ValidationMessageFor(x => x.Email)
                                </div>
                                <button class="btn btn-outline-light btn-lg px-5" type="submit">@language.Getkey("Reset Password")</button>
                                <a class="btn btn-secondary" asp-controller="Login" asp-action="Index">@language.Getkey("Back")</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>